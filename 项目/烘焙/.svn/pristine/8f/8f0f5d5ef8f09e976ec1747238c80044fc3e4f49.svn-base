*{
	margin: 0;
	padding: 0;
}
ul{
	list-style: none;
}
a{
	text-decoration: none;
}
body{
	background-color: #f9f9f9;
}
.container{
	width: 1168px;
	height: 1570px;
	margin: 0 auto;
	background-color: #f3f3f3;
}
/*tab begin*/
.tab{
	margin-top: 12px;
	width: 100%;
	height: 50px;
	background: #006fd7;
}
.tab span{
	width: 130px;
	line-height: 50px;
	display: block;
	float: left;
	text-align: center;
}
.tab span a{
	display: block;
	width: 100%;
	color: #fff;
	font-size: 14px;
	cursor: pointer;
}
.tab3{
	background: #4498e5;
}
/*tab end*/

/*left-nav begin*/
.left-nav{
	float: left;
	margin-top: 30px;
	margin-left: 16px;
	background-color: #f9f9f9;
}
.ln-1{
	width: 266px;
	height: 42px;
	background: #fba1a1;
}
.ln-1 span{
	margin-left: 30px;
	line-height: 42px;
	font-size: 15px;
	color: #fff;
}

.ln-2{
	width: 264px;
	height: 132px;
	border-left: 1px solid #bbbbbb;
	border-right: 1px solid #bbbbbb;
	border-bottom: 1px solid #bbbbbb;	
}
.ln-2 span{
	display: block;
	width: 220px;
	height: 42px;
	margin-left: 15px;
	padding-left: 18px;
	line-height: 42px;
	font-size: 15px;
	cursor: pointer;
}
.ln-2-1{
	border-bottom: 1px solid #fba1a1;
	color: #fba1a1;
}
.second{
	border-bottom: 1px solid #dbdada;
}
.ln-2-2{
	color: #676464;
}
/*left-nav end*/
/*add begin*/
.add{
	margin-top: 30px;
	float: right;
	margin-right: 30px;
	width: 832px;
	background: #fff;
}
.add_nav{
	width: 100%;
	height: 58px;
	background: #b094de;
}
.add_nav span{
	line-height: 58px;
	margin-left: 27px;
	color: #fff;
	font-size: 21px;
	font-weight: bold;
}
.addition{
	width: 832px;
	font-size: 18px;
	font-family: "微软雅黑";
	color: #717171;
	font-weight: bold;
}
.kind ul li{
	float: left;
	font-size: 14px;
	font-weight: normal;
	border: 1px solid #dedede;
	background-color:#f4f4f4; 
	text-align: center;
	width: 114px;
	height: 31px;
	line-height: 31px;
	margin: 0 25px 10px 0;
}
label{
	display: inline-block;
	width: 170px;
    text-align: right;
    margin-right:24px; 
}
.common{
	display: block;
	margin: 12px 0;
}
.common input{
	height: 31px;
	border: 1px solid #dedede;
	background-color:#f4f4f4;

}
.common textarea{
	width: 540px;
	height: 64px;
	border: 1px solid #dedede;
	background-color:#f4f4f4;
}
.release{
	display: block;
	margin: 0 auto;
	width: 264px;
	height: 44px;
	background-color: #8766bc;
	border-radius: 10px;
	color: #fff;
	font-size: 20px;
	font-weight: bold;
}
/*图片上传 start*/
#tab-content{
	width: 622px;
	height: 223px;
	color: #404040;
	font-size: 10px;
	font-weight: normal;
}
#tab{
	width: 100%;
	height: 43px;
	background: #f8f8f8;
	border: 1px solid #ececec;
}
#tab li{
	width: 89px;
	height: 30px;
	margin-left: 20px;
	background: #f8f8f8;
	line-height: 30px;
	text-align: center;
	float: left;
	display: block;
	cursor: pointer;
	border: 1px solid #ebebeb;
	position: relative;
	top:13px;
	border-bottom: none;
	color: #404040;
	font-size: 10px;
}
#tab .selected{
	background: #fff;
	border-bottom: none;
	border-top: 2px solid #999999;
}
#load{
	position: relative;
	left: 146px;
	top: 32px;
}
#load span{
	color: #aaa;
	display: inline-block;
	width: 71px;
	height: 24px;
	border: 1px solid #dddddd;
	background: #eee;
	line-height: 24px;
	text-align: center;
	cursor: pointer;
}
.hint{
	position: relative;
	left: 89px;
	top: 26px;
	color: #aaa;
}
#content{
	width: 100%;
	height: 180px;
	background: #fff;
	border: 1px solid #ececec;
	border-top: 0;
	position: relative;
}
#content div{
	display: none;
}
#content .selected{
	display: block;
}
/*图片上传 end*/