.sidebar-top{
	float: right;
	width: 143px;
}
.sidebar-top span{
	font-size: 14px;

}
.sidebar-top img{
	width: 143px;
	height: 180px;
}
#share,#collect{
	color: #32d2ad;
	font-weight: bold;
	font-size: 14px;
}
.bottom{
	
	margin-top: 58px;
	width: 910px;
	height: 997px;
	float: left;
}
.bottom .option-bar li{
	list-style: none;
	float: left;
	width: 200px;
	height: 47px;
	text-align: center;
	line-height: 47px;
	/*border: 1px solid green;*/
	
}
.bottom .option-bar li a{
	display: block;
	width: 100%;
	height: 100%;
	font-size: 18px;
	font-weight: bold;
	color: #fcaeae;
	background: url(../images/border.jpg) no-repeat 180px 0;
}
.bottom .detail{
	clear: both;
	width: 910px;
	height: 173px;
	border: 2px solid #fcaeae;
	
}
.bottom .detail p{
	font-size: 14px;
	color: #666666;
	line-height: 30px;
	margin-left: 25px;
	margin-top: 9px;
}
.sidebar-bottom{
	width: 233px;
	float: right;
	margin-top: 15px;
	position: relative;
}
.sidebar-bottom .sb-1{
	font-weight: bold;
	font-size: 18px;
	color: #fff;
	display: block;
	height: 42px;
	line-height: 42px;
	text-indent: 15px;
	background-color: #a58acc;
}
.sidebar-bottom .video{
	margin-top: 11px;
	height: 163px;
	width: 117px;
	float: left;
}
.sidebar-bottom .sb-2,.sb-3{
	font-size:16px;
	font-weight:bold;
	color:#000;
	display:block;
	/*margin-top:20px;设置上边距后为什么div会跟着下移 不套div怎么遍历*/
	margin-left: 134px;
}
.sb-4{
	display: block;
	width: 100px;
	height: 20px;
	margin-left: 134px;
	margin-top: 10px;
	background:  url(../images/smallstar.jpg) no-repeat;
}
.play{
	height: 38px;
