/*content begin*/
.content{
	width: 1172px;
	/*margin: 48px 103px;*/
	margin: 48px auto;
	height: 1000px;
	position: relative;
}
.cake-photo{
	float: left;
	width: 469px;
	height: 572px;
	border: 1px solid #ccc;
}
 .cake-photo .main-photo{
	width: 426px;
	height: 425px;
	margin: 19px 22px;
}
.cake-photo .thumb-photo{
	width: 87px;
	height: 87px;
}
#ul1 {
	list-style: none;
	margin-left: 22px;
}
#ul1 li{
	float: left;
}
.introduce{
	width: 518px;
	height: 572px;
	float: left;
	margin-left: 20px;
	 position: relative; 
}
.title{
	width: 518px;
	height: 77px;
	/*position: absolute;*/
	/*top: 0px;*/
	/*left: 18px;*/
	background:url(../images/title.png) no-repeat;
}
.title .baker-img{
	border-radius: 50%;
	position: absolute;
	left: 49px;
	top: 28px;
}
.title h2{
	font-size: 20px;
	line-height: 77px;
	text-indent: 210px;
	color: #000;
}
.title span{
	position: absolute;
	left: 178px;
	top: 116px;
}
.title .star{
	position: absolute;
	top: 112px;
	right: 0;
}
.price{
	margin-top: 82px;
	height: 80px;
	background-color: #eee;
	position: relative;
}
.price h2,h1{
	color: #ccc;
	font-size: 12px;
	position: absolute;
	left: 38px;
}
.price h2{
	top:16px;
}
.price h1{
	top:49px;
}
.zonghe{
	margin-top: 10px;
	height: 42px;
	border-top: 1px solid #c2c2c2;
	border-bottom: 1px solid #c2c2c2;
}
.multiple{
	list-style: none;
	margin-left: 45px;

}
.multiple li{
	float: left;
	color: #a0a0a0;
	font: 14px;
	font-weight: bold;
	line-height: 42px;
	margin-right: 50px;

}
.message{
	height: 150px;
}
.message ul{
	list-style: none;
	margin-left: 34px;
	margin-top: 30px;
}
.message .size li{
	float: left;
	padding: 7px 14px;
	margin-right: 9px;
}
/*.message .style li{
	float: left;
	padding: 7px 14px;
}*/
.message ul .value{
	font-size: 14px;
	color: #adadad;
	font-weight: bold;
}
.message ul .key{
	color: #000;
	border: 1px solid #c2c2c2;

}
.message .address li{
	float: left;
	padding: 7px 14px;
}
.message .address input{
	width: 78px;
	height: 29px;
	text-align: center;
	color: black;
	margin-right: 7px;
}
.message .address span{
	display: inline-block;
	width: 70px;
	height: 29px;
	border-radius: 20%;
	background-color: #a58acc;
	color: #fff;
	text-align: center;
	line-height: 29px;
}
.message .number li{
	float: left;
}
.introduce button{
	width: 225px;
	height: 42px;
	font-weight: bold;
	margin-left: 42px;
	font-size: 18px;
}
 #make,#buy{
	background-color: #b2f9e8;
	border: 1px solid #23cfa7;
	color: #23cfa7;
}
 #shopping{
	background-color: #23cfa7;
	color: #fff;
	border: 1px solid #23cfa7;
	position: absolute;
	right: 0;
	top: 465px;
}
#buy{
	position: absolute;
	right: 0;
	top:521px;
}
#local,#free,#reserve{
	color: white;
	font-size: 14px;
	font-weight: bold;
	display: inline-block;
	height: 27px;
	width: 62px;
	border-radius: 25%;
	text-align: center;
	line-height: 27px;
	background: #a58acc;
	margin-top: 25px;
	margin-left: 10px;
}
#local{
	margin-left: 42px;
}
